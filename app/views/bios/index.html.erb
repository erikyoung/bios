<h1 class="title text-center ">The Awesome Ones</h1>
 
<div class="container">
  <div class="row text-center">
  <% @bios.each do |bio| %>
    <div class="booyah-box col-md-4">
      <p><%= image_tag bio.picture.to_s, :class => "picture" %></p> 
      <div class="details col-md-4">
        <h1><%= link_to bio.name, bio_path(bio), :class => "name" %></h1>
        <p class="caption"> <%= bio.caption %> </p>
      </div>
    </div> 
    <% end %>
  </div>
</div>

<div class="text-center">
  <ul class="pagination">
    <%= will_paginate @bios, renderer: BootstrapPagination::Rails, previous_label: "Older", next_label: "Newer", inner_window: 1, outer_window: 0 %> </p>
  </ul>
</div>
























