<div class="booyah-box col-xs-6 col-xs-offset-1" %> 
<h1> Add a Cool Person </h1>

<%= simple_form_for (@bio) do |f| %>
		<%= f.input :name, placeholder: "Enter Your Name" %>
		<%= f.input :age, placeholder: "What's Your Age?" %>
		<%= f.input :description, placeholder: "Describe Yourself" %>
		<%= f.input :hometown, placeholder: "Where you from?" %> 
		<%= f.input :hobbies, placeholder: "What are your hobbies?" %> 
		<%= f.input :picture %>
		
<%= f.submit 'Add a person', class: 'btn btn-info btn-lg btn3d' %> 
	
<% end %> 

</div>



